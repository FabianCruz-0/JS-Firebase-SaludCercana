<body>
    <div class="jumbotron heroService"></div>

    <div class="container">
        <div class="row userInfoHeader">
            <div class="col-md-3">
                <img src="https://firebasestorage.googleapis.com/v0/b/saludcercana-a0cc7.appspot.com/o/user.jpg?alt=media&token=8b1b850e-6bd3-4edd-9078-38108b08ba55"
                    alt="" width="60%" class="userImg">
            </div>
            <div class="col-md-9 userInfoData">
                <div><b>Nombre</b>: {{documento.userName}}</div>
                <div><b>Servicio</b>: {{documento.TipoServicio}}</div>
            </div>
        </div>

        <div class="serviceInfo mt-5">
            <div class="drescricion mb-5">
                <div class="fw-bold">Descripción del servicio:</div>
                <div>
                    {{documento.Descripcion}}
                </div>
            </div>
            <div class="drescricion mb-5">
                <div class="fw-bold">Horario:</div>
                <div>
                    {{documento.Horario}}
                </div>
            </div>
            <div class="contacto mb-5">
                <div class="fw-bold">Contacto:</div>
                <div>Teléfono: {{documento.userTel}}</div>
                <div>Correo: {{documento.userEmail}}</div>
            </div>
            <div class="ubicacion">
                <div class="fw-bold">Ubicación:</div>
                <div class="fw-bold">{{documento.Calle}} {{documento.Numero}}, {{documento.Colonia}},
                    {{documento.Municipio}}, {{documento.Estado}}</div>
                <br>
                <div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no"
                        marginheight="0" marginwidth="0"
                        src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=es&amp;q={{ubicacion}}+()&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a
                            href="https://www.gps.ie/car-satnav-gps/">GPS devices</a></iframe></div>
            </div>
        </div>
        <br><br>
    </div>
</body>
<style>
    .heroService {
        background-image: url('https://firebasestorage.googleapis.com/v0/b/saludcercana-a0cc7.appspot.com/o/dermatologo_hq.jpg?alt=media&token=e3874a4c-cf7b-4284-9af3-9d73232cd938');
        width: 100%;
        height: 50vh;
        background-repeat: no-repeat;
        background-size: cover;
        margin-bottom: 5vh;
        background-position: 50%;
    }

    .userInfoHeader {
        margin: 0px 0px 10px 0px;
    }

    .userImg {
        display: block;
        margin-left: auto;
        margin-right: auto;
        border-radius: 50%;
        border: 1px #505050 solid;
    }

    .userInfoData {
        border-bottom: 1px rgb(106, 68, 194) solid;
        display: block;
        margin-top: auto;
        margin-bottom: auto;
    }

    .googleMaps {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>