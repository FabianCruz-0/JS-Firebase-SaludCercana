<body>
    <div class="container">
        <div class="hero">
            <div class="heroImg"></div>
            <div class="title">Salud Cercana</div>
        </div>

        <div class="separator"></div>

        <div class="text-center fw-bold mt-4">
            ¡Hola! Busca nuestros servicios:
        </div>
        <br><br>
        <form action="servicios" method="post">
            <div class="input-group input-group-md">
                <span class="input-group-text">Tipo Servicio</span>
                <select class="form-select" aria-label="Default select example" name="TipoServicio" required>
                    {{#each typesServices}}
                    <option value="{{this.TipoServicio}}">{{this.TipoServicio}}</option>
                    {{/each}}
                </select>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Colonia</span>
                <input type="text" aria-label="Colonia" class="form-control" name="colonia" placeholder="La Rioja...">
                <span class="input-group-text">Código Postal</span>
                <input type="text" aria-label="Código Postal" class="form-control" name="postal" placeholder="12383...">
            </div> <br>
            <div class="input-group">
                <span class="input-group-text">Municipio</span>
                <input type="text" aria-label="Municipio" class="form-control" name="municipio"
                    placeholder="Guadalupe...">
                <span class="input-group-text">Estado</span>
                <input type="text" aria-label="Estado" class="form-control" name="estado" placeholder="Nuevo León...">
            </div>
            <br>
            <center><button type="submit" class="btn btn-primary">Buscar</button></center>
        </form>
        <br><br><br>
    </div>
</body>
<style>
    body{
        min-height: 100vh;
    }
    .hero {
        margin: 2vw 0 2vw 0;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        flex-direction: column;

    }

    .heroImg {
        background-image: url('/imgs/hero-image.jpg');
        background-size: cover;
        background-position: 50%;
        background-repeat: no-repeat;
        transition: transform 2s;
        height: 100%;
        width: 100%;
    }

    .heroImg:hover {
        transform: scale(1.2);
    }

    .title {
        color: white;
        filter: drop-shadow(0px 0px 5px #ffffff);
        font-weight: bold;
        font-size: 50px;
        position: absolute;
    }

    .separator {
        border-top: 2px #6915c9 solid;
    }

    .cardContainer {
        padding: 30px;
    }

    .card {
        border: 1px #535353 solid;
        border-radius: 2px;
        filter: drop-shadow(-2px 2px 2px #505050);
        height: 300px;
        transition: transform 1s;
        overflow: hidden;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .cardLink {
        color: black;
        text-decoration: none;
    }

    .cardLink:hover {
        color: black;
        text-decoration: none;
    }

    .imgServicio {
        background-image: url('/imgs/dermatologo.jpg');
        background-size: cover;
        background-position: 50%;
        min-height: 40%;
        border-bottom: 1px black solid;
    }

    .tituloServicio {
        margin: 10px 0px 10px 0px;
    }

    .infoServicio {
        text-align: justify;
        padding: 20px;
    }
</style>