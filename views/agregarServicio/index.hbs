<body>
    <div class="cuerpo">
        <div class="container agregarServicio">

            <center>
                <h2 class="text-white"><b>Agregar un Servicio</b></h2>
            </center>
            <br>
            <form action="agregarServicio" method="post">

                <div class="input-group input-group-lg">
                    <span class="input-group-text">Tipo Servicio</span>
                    <select class="form-select" aria-label="Default select example" name="TipoServicio">
                        {{#each typesServices}}
                        <option value="{{this.TipoServicio}}">{{this.TipoServicio}}</option>
                        {{/each}}
                    </select>
                </div>
                <br><br>
                <center>
                    <h4 class="text-white"><b>Ubicación</b></h4>
                </center>
                <div class="formUbicacion">
                    <div class="input-group">
                        <span class="input-group-text">Calle</span>
                        <input type="text" aria-label="Calle" class="form-control" name="calle"
                            placeholder="San Isidro..." required>
                        <span class="input-group-text">Número </span>
                        <input type="text" aria-label="Número" class="form-control" name="numero" placeholder="#430..." required>
                    </div> <br>
                    <div class="input-group">
                        <span class="input-group-text">Colonia</span>
                        <input type="text" aria-label="Colonia" class="form-control" name="colonia"
                            placeholder="La Rioja..." required>
                        <span class="input-group-text">Código Postal</span>
                        <input type="text" aria-label="Código Postal" class="form-control" name="postal"
                            placeholder="12383..." required>
                    </div> <br>
                    <div class="input-group">
                        <span class="input-group-text">Municipio</span>
                        <input type="text" aria-label="Municipio" class="form-control" name="municipio"
                            placeholder="Guadalupe..." required>
                        <span class="input-group-text">Estado</span>
                        <input type="text" aria-label="Estado" class="form-control" name="estado"
                            placeholder="Nuevo León..." required>
                    </div>
                </div>
                <br>
                <center>
                    <h4 class="text-white"><b>Horario del servicio</b></h4>
                </center>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Horario..." aria-label="Horario..." name="horario" required>
                </div>
                <br>
                <center>
                    <h4 class="text-white"><b>Descripción del servicio</b></h4>
                </center>
                <div class="input-group">
                    <textarea class="form-control" aria-label="Descripción" placeholder="Redactar..." name="descripcion" required></textarea>
                </div>
                <br><br>
                <input type="hidden" name="userEmail" value="{{session.email}}">
                <center>
                    <button type="submit" class="btn btn-primary"><b>Registrar</b></button>
                </center>
            </form>
        </div>
    </div>
</body>

<style>
    body {
        height: 100vh;
    }


    .cuerpo {
        background-image: url('https://firebasestorage.googleapis.com/v0/b/saludcercana-a0cc7.appspot.com/o/background.jpg?alt=media&token=36e5f048-a75a-42d8-ad80-8646cb83dc77');
        width: 100%;
        min-height: 100%;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

    .agregarServicio {
        background-color: rgba(0, 0, 0, 0.555);
        width: 100%;
        height: 100%;
        border-radius: 5px;
        padding: 20px;
    }

    .formUbicacion {
        padding: 0px 40px 0px 40px;
    }
</style>