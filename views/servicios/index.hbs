<body>
    <div class="container">
        <div class="hero">
            <div class="heroImg"></div>
            <div class="title">Salud Cercana</div>
        </div>

        <div class="separator"></div>

        <div class="text-center fw-bold mt-4">
            Estos son nuestros resultados a tu busqueda:
        </div>
        <br><br>
        <div class="servicios" id="servicios">
            <div class="row" id="0">
            </div>
            {{#each servicios}}
            <script>
                var row = document.getElementById('0')
                row.innerHTML += /*html*/`
                <div class="col-md-4 cardContainer">
                    <a href="/servicio/{{this.ID}}" class="cardLink">
                        <div class="card">
                            <div class="tituloServicio text-center fw-bold">{{this.TipoServicio}}</div>
                            <div class="tituloServicio text-center fw-bold">{{this.userName}}</div>
                            <div class="infoServicio">{{this.Descripcion}}</div>
                        </div>
                    </a>
                </div>
                `
            </script>
            {{/each}}
        </div>
    </div>
</body>
<style>
    .hero {
        margin: 2vw 0 2vw 0;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        flex-direction: column;

    }

    .heroImg {
        background-image: url('/imgs/hero-image.jpg');
        background-size: cover;
        background-position: 50%;
        background-repeat: no-repeat;
        transition: transform 2s;
        height: 100%;
        width: 100%;
    }

    .heroImg:hover {
        transform: scale(1.2);
    }

    .title {
        color: white;
        filter: drop-shadow(0px 0px 5px #ffffff);
        font-weight: bold;
        font-size: 50px;
        position: absolute;
    }

    .separator {
        border-top: 2px #6915c9 solid;
    }

    .cardContainer {
        padding: 30px;
    }

    .card {
        border: 1px #535353 solid;
        border-radius: 2px;
        filter: drop-shadow(-2px 2px 2px #505050);
        height: 300px;
        transition: transform 1s;
        overflow: hidden;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .cardLink {
        color: black;
        text-decoration: none;
    }

    .cardLink:hover {
        color: black;
        text-decoration: none;
    }

    .imgServicio {
        background-image: url('/imgs/dermatologo.jpg');
        background-size: cover;
        background-position: 50%;
        min-height: 40%;
        border-bottom: 1px black solid;
    }

    .tituloServicio {
        margin: 10px 0px 10px 0px;
    }

    .infoServicio {
        text-align: justify;
        padding: 20px;
    }
</style>